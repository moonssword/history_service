{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ESNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  